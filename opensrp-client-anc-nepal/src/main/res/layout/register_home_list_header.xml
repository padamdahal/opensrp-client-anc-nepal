<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_headers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/client_list_header_dark_grey"
    android:baselineAligned="false"
    android:orientation="horizontal">


    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/patient_header"
        style="@style/CustomFontTextViewStyle.ClientList.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textAllCaps="true"
        android:textColor="@color/dark_grey_text"
        android:textSize="16sp"
        android:layout_weight="1.5"/>

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/id_header"
        style="@style/CustomFontTextViewStyle.ClientList.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:paddingLeft="0dp"
        android:text="@string/id"
        android:textAllCaps="true"
        android:textColor="@color/dark_grey_text"
        android:textSize="16sp"
        android:layout_weight="1" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/dose_header"
        style="@style/CustomFontTextViewStyle.ClientList.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="0dp"
        android:text="@string/dose_d"
        android:textAllCaps="true"
        android:textColor="@color/dark_grey_text"
        android:textSize="16sp"
        android:layout_weight="1" />

</LinearLayout>
